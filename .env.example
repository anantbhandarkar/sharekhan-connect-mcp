# Sharekhan Connect MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Sharekhan API credentials
SHAREKHAN_API_KEY=your_api_key_here
SHAREKHAN_SECRET_KEY=your_secret_key_here
SHAREKHAN_CUSTOMER_ID=your_customer_id

# Optional: API Version (1005, 1006, or null)
SHAREKHAN_VERSION_ID=1005

# Optional: Vendor Key (only for vendor login)
SHAREKHAN_VENDOR_KEY=your_vendor_key_if_applicable

# Optional: OAuth state parameter
SHAREKHAN_STATE=12345

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8080
REDIRECT_URI=http://localhost:8080/auth/callback

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/sharekhan_mcp.log

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# WebSocket Configuration
WS_TIMEOUT=60
WS_RECONNECT_ATTEMPTS=5
